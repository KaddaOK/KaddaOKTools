<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:KaddaOK.AvaloniaApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:KaddaOK.AvaloniaApp.Views"
    mc:Ignorable="d"
    d:DesignWidth="1000"
    d:DesignHeight="860"
    x:Class="KaddaOK.AvaloniaApp.Views.MainWindow"
    Icon="/Assets/KaddaOKIcon.png"
    Title="KaddaOK Tools"
    Background="Transparent"
    SystemDecorations="Full"
    Position="0,0"
    Width="1180"
    MinWidth="800"
    Height="860"
    WindowState="Normal"
    WindowStartupLocation="CenterScreen"
    x:Name="Main"
    x:CompileBindings="True"
    x:DataType="vm:MainViewModel"
    RequestedThemeVariant="Dark"
    ExtendClientAreaToDecorationsHint="True"
    >

        <Panel>

            <Border CornerRadius="20" IsHitTestVisible="False" Background="#FF17181D" BorderBrush="{DynamicResource SystemBaseLowColor}" BorderThickness="1">

            </Border>
			<Border Background="#FF2B2B2B" BorderBrush="{DynamicResource SystemBaseLowColor}" BorderThickness="1,1,0,1"
                    Width="220" HorizontalAlignment="Left" CornerRadius="20,0,0,20">

            </Border>
            <views:MainView />
        </Panel>
	<!--
	</Border>-->

</Window>